/*mine.wxss*/
.page{
  font-size: 14px;
}

.container{
  background-color: whitesmoke;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.face{
  width: 90px;
  height: 90px;
  border-radius: 50%;   /*添加圆角的边框*/
  margin-top: 20px;
}

.nickname{
  margin-top: 5px;

  /*设置字体的粗细值，取值为 lighter | normal | bold | bolder，
  默认为 normal。lighter 为细体，normal 为正常粗细，bold 为粗体，
  bolder 为特粗体。
  */
  font-weight: bold;
  font-size: 18xp;
}

.container-row{
  display: flex;
  flex-direction: row;
  /*下外边距*/
  margin-bottom: 10px;
  margin-top: 10px;
}

.info-items{
  margin-left: 30px
}

.line{
  width: 100%;
  height: 1px;
  background-color: gainsboro;
  margin-top: 1px;
}

.logout{
  margin-top: 3px;
  float: right;
}

.follow{
  margin-top: 3px;
}

.container-video{
  display: flex;
  flex-direction: row;
  margin-top: 20px;
  text-align: center;
  border: solid 1px;
  line-height: 30px;
}

.video-info{
  width: 100%
}

.video-info-selected{
  background-color: grey;
}

.container-video-list{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.videoImage{
  width: 250rpx;
  height: 180px;
}